{
  "manifest_version": 3,
  "name": "StyleSensei - AI Writing Assistant",
  "version": "1.0.0",
  "description": "AI-powered writing assistant that transforms text to match selected tones while preserving your unique voice",
  "permissions": [
    "activeTab",
    "contextMenus"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_title": "Toggle StyleSensei"
  },
  "web_accessible_resources": [
    {
      "resources": ["content.css"],
      "matches": ["<all_urls>"]
    }
  ]
} 